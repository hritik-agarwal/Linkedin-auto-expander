{
  "manifest_version": 3,
  "name": "LinkedIn Auto Expander",
  "version": "1.0.0",
  "description": "Automatically expands LinkedIn posts and comments by clicking '...more' buttons",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Auto Expander"
  }
}
