{
  "manifest_version": 3,
  "name": "LinkedIn Smart Expander",
  "version": "2.0.0",
  "description": "Intelligently expands LinkedIn posts and comments when they enter your reading zone",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Smart Expander"
  }
}
